@using firstmvc.Models
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@if (ViewBag.activeStudent ==null)
{
    <div class="alert alert-danger">
        <span class="" >@ViewBag.Error</span>
    </div>
}
else
{
    User selectUser = ViewBag.activeStudent;
<form method="post">
    <div class="form-group">
        <input name="firstname" class="form-control" value="@selectUser.Firstname" type="text" placeholder="First Name" />
    </div>
    <div class="form-group">
        <input name="lastname" value="@selectUser.Lastname" class="form-control" type="text" placeholder="Last Name" />
    </div>
    <div class="form-group">
        <input name="email" value="@selectUser.Lastname" class="form-control" type="text" placeholder="Email" />
    </div>
    <div class="form-group">
        <input name="phone" value="@selectUser.Lastname" class="form-control" type="text" placeholder="Phone" />
    </div>
    <div class="form-group">
        <select class="form-control" name="group_id" id="group">
            @foreach (Group gr in ViewBag.SelectedGroup)
            {
                <option value="@gr.id" @(gr.Name == selectUser.Group.Name ?"selected":"")>@gr.Name</option>
            }
        </select>
        </div>
    <div class="form-group">
         <input type="submit" value="Edit" class="btn btn-primary btn-lg"/>
    </div>
</form>
}


